<% if config.enable_ssl %>
upstream <%= config.upstream_name %> {
  <% config.proxy_to.each do |p| %>
    server <%= p %>;
  <% end %>
}

server {
    server_name  <%= config.domain %>;
    listen       80;

    location ^~ /.well-known/acme-challenge/ {
       root /var/www/letsencrypt;
    }

    location / {
       return 301   https://$host$request_uri;
    }
}

server {
    server_name  <%= config.domain %>;
    listen       443 ssl http2;
    ssl_certificate      /etc/letsencrypt/live/<%= config.domain %>/fullchain.pem;
    ssl_certificate_key  /etc/letsencrypt/live/<%= config.domain %>/privkey.pem;

    <%= config.nginx_config %>

    location / {
        error_log /var/log/nginx/error_<%= config.upstream_name %>.log;
        access_log /var/log/nginx/access_<%= config.upstream_name %>.log main;

        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Request-ID $request_id;
        proxy_pass http://<%= config.upstream_name %>;
    }
}
<% else %>
server {
    server_name  <%= config.domain %>;
    listen       80;

    location ^~ /.well-known/acme-challenge/ {
       root /var/www/letsencrypt;
    }
}
<% end %>
